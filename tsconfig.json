{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist/",
        "strict": true,
        "removeComments": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        // makes the ts compiler faster
        // but the ts check is not that accurate
        "skipLibCheck": true
    },
    "ts-node": {
        "transpileOnly": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/seeder.ts",
        "./src/migrations/*"
    ]
}